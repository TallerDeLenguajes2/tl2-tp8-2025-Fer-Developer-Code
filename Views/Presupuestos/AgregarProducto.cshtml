@model SistemaVentas.Web.ViewModels.AgregarProductoViewModel
@{
    ViewData["Title"] = "Agregar Producto";
}

<h2>Agregar Producto al Presupuesto N° @Model.IdPresupuesto</h2>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="AgregarProducto" method="post">

            <input type="hidden" asp-for="IdPresupuesto" />

            <div class="form-group mb-3">
                <label asp-for="IdProducto" class="control-label"></label>
                <select asp-for="IdProducto" asp-items="@Model.ListaProductos" class="form-select">
                    <option value="">-- Seleccionar Producto --</option>
                </select>
                <span asp-validation-for="IdProducto" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Añadir Producto" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.IdPresupuesto" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}