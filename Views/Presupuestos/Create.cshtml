@using TP7.PresupuestoModel
@model Presupuesto
@{
    ViewData["Title"] = "Crear Nuevo Presupuesto";
}

<h1>@ViewData["Title"]</h1>
<div asp-validation-summary="All" class="text-danger"></div> <!-- Validation summary for displaying model errors -->
<h4>Paso 1: Datos del Encabezado</h4>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            
            <div class="form-group mb-3">
                <label asp-for="NombreDestinatario" class="control-label">Nombre del Destinatario</label>
                <input asp-for="NombreDestinatario" class="form-control" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Crear y Agregar Productos" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>